{
    "env": {
        "browser": true,
        "worker": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "globals": {
        "noise": "readonly",
        "generateNoiseImageSync": "writable"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "camelcase": "error",
        "semi": "warn",
        "comma-dangle": [
            "error",
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "never",
                "exports": "never",
                "functions": "never"
            }
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ]
    }
}